{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://anthropic.com/claude-code/marketplace.schema.json",
  "title": "Claude Code Marketplace",
  "description": "Schema for marketplace.json files.",
  "type": "object",
  "required": ["name", "version", "owner", "plugins"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "description": "Marketplace name (kebab-case)",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "owner": {
      "$ref": "#/$defs/Owner"
    },
    "metadata": {
      "$ref": "#/$defs/Metadata"
    },
    "plugins": {
      "type": "array",
      "description": "Plugins in marketplace",
      "items": { "$ref": "#/$defs/MarketplacePlugin" },
      "uniqueItems": true
    }
  },
  "$defs": {
    "Owner": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "email": { "type": "string", "format": "email" }
      }
    },
    "Metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pluginRoot": {
          "type": "string",
          "description": "Root directory for plugin sources"
        }
      }
    },
    "MarketplacePlugin": {
      "type": "object",
      "required": ["name", "source"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9]*(-[a-z0-9+]+)*$",
          "minLength": 1
        },
        "source": {
          "oneOf": [{ "type": "string" }, { "$ref": "#/$defs/RemoteSource" }]
        },
        "description": { "type": "string", "minLength": 1 },
        "version": { "type": "string" },
        "author": { "$ref": "#/$defs/Author" },
        "category": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        }
      }
    },
    "RemoteSource": {
      "type": "object",
      "required": ["source"],
      "additionalProperties": false,
      "properties": {
        "source": { "type": "string", "enum": ["github", "url"] },
        "repo": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "ref": { "type": "string" }
      }
    },
    "Author": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "email": { "type": "string", "format": "email" }
      }
    }
  }
}
