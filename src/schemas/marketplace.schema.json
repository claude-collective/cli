{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-collective.local/schemas/marketplace.schema.json",
  "title": "Marketplace",
  "description": "Schema for marketplace.json plugin listings.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "owner": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "pluginRoot": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "source": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "source": {
                    "type": "string",
                    "enum": ["github", "url"]
                  },
                  "repo": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  },
                  "ref": {
                    "type": "string"
                  }
                },
                "required": ["source"],
                "additionalProperties": false
              }
            ]
          },
          "description": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "author": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              }
            },
            "required": ["name"],
            "additionalProperties": false
          },
          "category": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["name", "source"],
        "additionalProperties": false
      }
    }
  },
  "required": ["name", "version", "owner", "plugins"],
  "additionalProperties": false
}
