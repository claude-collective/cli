{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/stack.schema.json",
  "title": "Stack Config",
  "description": "Schema for individual stack config.yaml files.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "created": {
      "type": "string"
    },
    "updated": {
      "type": "string"
    },
    "framework": {
      "type": "string"
    },
    "skills": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "preloaded": {
            "type": "boolean"
          }
        },
        "required": ["id"],
        "additionalProperties": false
      }
    },
    "agents": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
      }
    },
    "agent_skills": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "preloaded": {
                "type": "boolean"
              }
            },
            "required": ["id"],
            "additionalProperties": false
          }
        }
      }
    },
    "philosophy": {
      "type": "string"
    },
    "principles": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
      }
    },
    "overrides": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "alternatives": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "locked": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "upvotes": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        },
        "downloads": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9007199254740991
        }
      },
      "additionalProperties": false
    },
    "hooks": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "matcher": {
              "type": "string"
            },
            "hooks": {
              "minItems": 1,
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["command", "script", "prompt"]
                  },
                  "command": {
                    "type": "string"
                  },
                  "script": {
                    "type": "string"
                  },
                  "prompt": {
                    "type": "string"
                  }
                },
                "required": ["type"],
                "additionalProperties": false
              }
            }
          },
          "required": ["hooks"],
          "additionalProperties": false
        }
      }
    }
  },
  "required": ["name", "version", "author", "skills", "agents"],
  "additionalProperties": false
}
