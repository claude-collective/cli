{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/agent.schema.json",
  "title": "Agent Definition",
  "description": "Schema for agent.yaml files defining Claude Code agents.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "enum": ["sonnet", "opus", "haiku", "inherit"]
    },
    "tools": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "disallowedTools": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "permissionMode": {
      "type": "string",
      "enum": ["default", "acceptEdits", "dontAsk", "bypassPermissions", "plan", "delegate"]
    },
    "hooks": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "matcher": {
              "type": "string"
            },
            "hooks": {
              "minItems": 1,
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["command", "script", "prompt"]
                  },
                  "command": {
                    "type": "string"
                  },
                  "script": {
                    "type": "string"
                  },
                  "prompt": {
                    "type": "string"
                  }
                },
                "required": ["type"],
                "additionalProperties": false
              }
            }
          },
          "required": ["hooks"],
          "additionalProperties": false
        }
      }
    },
    "outputFormat": {
      "type": "string"
    }
  },
  "required": ["id", "title", "description", "tools"],
  "additionalProperties": false
}
