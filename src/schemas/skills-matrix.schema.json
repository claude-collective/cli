{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-collective.local/schemas/skills-matrix.schema.json",
  "title": "Skills Matrix Configuration",
  "description": "Categories, relationships, stacks, and aliases for CLI wizard.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "categories",
    "relationships",
    "skill_aliases"
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Matrix schema version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[a-z0-9.-]+)?$"
    },
    "categories": {
      "type": "object",
      "description": "Category definitions by ID",
      "additionalProperties": { "$ref": "#/$defs/CategoryDefinition" },
      "minProperties": 1
    },
    "relationships": { "$ref": "#/$defs/RelationshipDefinitions" },
    "suggested_stacks": {
      "type": "array",
      "description": "Pre-configured stacks for quick setup",
      "items": { "$ref": "#/$defs/SuggestedStack" }
    },
    "skill_aliases": {
      "type": "object",
      "description": "Short names to full skill IDs",
      "additionalProperties": { "type": "string" }
    }
  },
  "$defs": {
    "CategoryDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "description",
        "exclusive",
        "required",
        "order"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "parent": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "exclusive": {
          "type": "boolean",
          "description": "Only one skill can be selected",
          "default": true
        },
        "required": {
          "type": "boolean",
          "description": "Must select from this category",
          "default": false
        },
        "order": {
          "type": "integer",
          "minimum": 0
        },
        "icon": { "type": "string" }
      }
    },
    "RelationshipDefinitions": {
      "type": "object",
      "additionalProperties": false,
      "required": ["conflicts", "recommends", "requires", "alternatives"],
      "properties": {
        "conflicts": {
          "type": "array",
          "items": { "$ref": "#/$defs/ConflictRule" }
        },
        "recommends": {
          "type": "array",
          "items": { "$ref": "#/$defs/RecommendRule" }
        },
        "requires": {
          "type": "array",
          "items": { "$ref": "#/$defs/RequireRule" }
        },
        "alternatives": {
          "type": "array",
          "items": { "$ref": "#/$defs/AlternativeGroup" }
        },
        "discourages": {
          "type": "array",
          "items": { "$ref": "#/$defs/DiscourageRule" }
        }
      }
    },
    "ConflictRule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["skills", "reason"],
      "properties": {
        "skills": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "uniqueItems": true
        },
        "reason": { "type": "string", "minLength": 1 }
      }
    },
    "RecommendRule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["when", "suggest", "reason"],
      "properties": {
        "when": { "type": "string" },
        "suggest": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        },
        "reason": { "type": "string", "minLength": 1 }
      }
    },
    "RequireRule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["skill", "needs", "reason"],
      "properties": {
        "skill": { "type": "string" },
        "needs": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "needs_any": {
          "type": "boolean",
          "description": "OR logic if true, AND if false",
          "default": false
        },
        "reason": { "type": "string", "minLength": 1 }
      }
    },
    "AlternativeGroup": {
      "type": "object",
      "additionalProperties": false,
      "required": ["purpose", "skills"],
      "properties": {
        "purpose": { "type": "string", "minLength": 1 },
        "skills": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "DiscourageRule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["skills", "reason"],
      "properties": {
        "skills": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "uniqueItems": true
        },
        "reason": { "type": "string", "minLength": 1 }
      }
    },
    "SuggestedStack": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "description",
        "audience",
        "skills",
        "philosophy"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "audience": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "skills": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "philosophy": { "type": "string", "minLength": 1 }
      }
    }
  }
}
