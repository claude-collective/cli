              "observability",
              "analytics",
              "email",
              "performance",
              "mobile-framework",
              "monorepo",
              "tooling",
              "security",
              "methodology",
              "research",
              "reviewing",
              "ci-cd",
              "cli-framework",
              "cli-prompts",
              "cli-testing"
            ]
          },
          "displayName": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "domain": {
            "type": "string",
            "enum": ["web", "api", "cli", "mobile", "shared"]
          },
          "exclusive": {
            "type": "boolean"
          },
          "required": {
            "type": "boolean"
          },
          "order": {
            "type": "number"
          },
          "icon": {
            "type": "string"
          }
        },
        "required": ["id", "displayName", "description", "exclusive", "required", "order"],
        "additionalProperties": false
      },
      "required": [
