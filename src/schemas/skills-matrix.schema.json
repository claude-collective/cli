        "ci-cd",
        "cli-framework",
        "cli-prompts",
        "cli-testing"
      ]
    },
    "relationships": {
      "type": "object",
      "properties": {
        "conflicts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "skills": {
                "minItems": 2,
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "reason": {
                "type": "string"
              }
            },
            "required": ["skills", "reason"],
            "additionalProperties": false
          }
        },
        "discourages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "skills": {
                "minItems": 2,
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "reason": {
                "type": "string"
              }
            },
            "required": ["skills", "reason"],
            "additionalProperties": false
          }
        },
        "recommends": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "when": {
                "type": "string"
              },
              "suggest": {
                "minItems": 1,
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "reason": {
                "type": "string"
              }
            },
            "required": ["when", "suggest", "reason"],
            "additionalProperties": false
          }
        },
        "requires": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "skill": {
                "type": "string"
              },
              "needs": {
                "minItems": 1,
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "needsAny": {
                "type": "boolean"
              },
              "reason": {
                "type": "string"
              }
            },
            "required": ["skill", "needs", "reason"],
            "additionalProperties": false
          }
        },
        "alternatives": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "purpose": {
                "type": "string"
              },
              "skills": {
                "minItems": 1,
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": ["purpose", "skills"],
            "additionalProperties": false
          }
        }
      },
      "required": ["conflicts", "discourages", "recommends", "requires", "alternatives"],
      "additionalProperties": false
    },
    "skillAliases": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": [
