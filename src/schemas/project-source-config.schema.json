{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/project-source-config.schema.json",
  "title": "Project Source Configuration",
  "description": "Schema for .claude-src/config.yaml marketplace source configuration files.",
  "type": "object",
  "properties": {
    "source": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "marketplace": {
      "type": "string"
    },
    "agentsSource": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "ref": {
            "type": "string"
          }
        },
        "required": ["name", "url"],
        "additionalProperties": false
      }
    },
    "boundSkills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "sourceUrl": {
            "type": "string"
          },
          "sourceName": {
            "type": "string"
          },
          "boundTo": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["id", "sourceUrl", "sourceName", "boundTo"],
        "additionalProperties": false
      }
    },
    "branding": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "tagline": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "skillsDir": {
      "type": "string"
    },
    "agentsDir": {
      "type": "string"
    },
    "stacksFile": {
      "type": "string"
    },
    "categoriesFile": {
      "type": "string"
    },
    "rulesFile": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
