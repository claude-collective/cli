{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/project-source-config.schema.json",
  "title": "Project Source Configuration",
  "description": "Schema for .claude-src/config.yaml marketplace source configuration files.",
  "type": "object",
  "properties": {
    "source": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "marketplace": {
      "type": "string"
    },
    "agents_source": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "ref": {
            "type": "string"
          }
        },
        "required": ["name", "url"],
        "additionalProperties": false
      }
    },
    "boundSkills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "sourceUrl": {
            "type": "string"
          },
          "sourceName": {
            "type": "string"
          },
          "boundTo": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["id", "sourceUrl", "sourceName", "boundTo"],
        "additionalProperties": false
      }
    },
    "skills_dir": {
      "type": "string"
    },
    "agents_dir": {
      "type": "string"
    },
    "stacks_file": {
      "type": "string"
    },
    "matrix_file": {
      "type": "string"
    }
  },
  "additionalProperties": {}
}
