{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/project-config.schema.json",
  "title": "Project Configuration",
  "description": "Schema for .claude-src/config.yaml consumer project files (name, agents, stack, skills).",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
      }
    },
    "author": {
      "type": "string"
    },
    "installMode": {
      "type": "string",
      "enum": ["local", "plugin"]
    },
    "expertMode": {
      "type": "boolean"
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["web", "api", "cli", "mobile", "shared"]
      }
    },
    "stack": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "propertyNames": {
          "type": "string",
          "enum": [
            "web-framework",
            "web-styling",
            "web-client-state",
            "web-server-state",
            "web-forms",
            "web-testing",
            "web-ui-components",
            "web-mocking",
            "web-error-handling",
            "web-i18n",
            "web-file-upload",
            "web-files",
            "web-utilities",
            "web-realtime",
            "web-animation",
            "web-pwa",
            "web-accessibility",
            "web-performance",
            "web-base-framework",
            "api-api",
            "api-database",
            "api-auth",
            "api-observability",
            "api-analytics",
            "api-email",
            "api-performance",
            "mobile-framework",
            "mobile-platform",
            "shared-monorepo",
            "shared-tooling",
            "shared-security",
            "shared-methodology",
            "shared-research",
            "shared-reviewing",
            "shared-ci-cd",
            "cli-framework",
            "cli-prompts",
            "cli-testing"
          ]
        },
        "additionalProperties": {
          "anyOf": [
            {
              "anyOf": [
                {
                  "type": "string",
                  "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                },
                {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                    },
                    "preloaded": {
                      "type": "boolean"
                    },
                    "local": {
                      "type": "boolean"
                    },
                    "path": {
                      "type": "string"
                    }
                  },
                  "required": ["id"],
                  "additionalProperties": false
                }
              ]
            },
            {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "string",
                    "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                      },
                      "preloaded": {
                        "type": "boolean"
                      },
                      "local": {
                        "type": "boolean"
                      },
                      "path": {
                        "type": "string"
                      }
                    },
                    "required": ["id"],
                    "additionalProperties": false
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "source": {
      "type": "string"
    },
    "marketplace": {
      "type": "string"
    },
    "agentsSource": {
      "type": "string"
    }
  },
  "required": ["name", "agents", "skills", "installMode", "stack", "source"],
  "additionalProperties": false
}
