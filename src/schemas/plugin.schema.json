{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-collective.local/schemas/plugin.schema.json",
  "title": "Plugin Manifest",
  "description": "Schema for plugin.json in Claude Code plugins.",
  "type": "object",
  "required": ["name"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Plugin name (kebab-case)",
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Semantic version",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "$ref": "#/$defs/Author"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "commands": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "agents": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "skills": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "hooks": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/HooksConfig"
        }
      ]
    }
  },
  "$defs": {
    "Author": {
      "type": "object",
      "required": ["name"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "HooksConfig": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/HookDefinition"
        }
      }
    },
    "HookDefinition": {
      "type": "object",
      "properties": {
        "matcher": {
          "type": "string"
        },
        "hooks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/HookAction"
          }
        }
      }
    },
    "HookAction": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["command", "script", "prompt"]
        },
        "command": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        }
      }
    }
  }
}
