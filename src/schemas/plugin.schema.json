{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/plugin.schema.json",
  "title": "Plugin Manifest",
  "description": "Schema for plugin.json manifest files.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commands": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "agents": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "skills": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "hooks": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "matcher": {
                  "type": "string"
                },
                "hooks": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["command", "script", "prompt"]
                      },
                      "command": {
                        "type": "string"
                      },
                      "script": {
                        "type": "string"
                      },
                      "prompt": {
                        "type": "string"
                      }
                    },
                    "required": ["type"],
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          }
        }
      ]
    }
  },
  "required": ["name"],
  "additionalProperties": false
}
