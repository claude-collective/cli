{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-collective.local/schemas/stacks.schema.json",
  "title": "Stacks Configuration",
  "description": "Schema for config/stacks.yaml defining agent groupings.",
  "type": "object",
  "properties": {
    "stacks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "agents": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "philosophy": {
            "type": "string"
          }
        },
        "required": ["id", "name", "description", "agents"],
        "additionalProperties": false
      }
    }
  },
  "required": ["stacks"],
  "additionalProperties": false
}
