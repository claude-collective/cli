{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/stacks.schema.json",
  "title": "Stacks Configuration",
  "description": "Schema for config/stacks.yaml defining agent groupings.",
  "type": "object",
  "properties": {
    "stacks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "agents": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "anyOf": [
                  {
                    "anyOf": [
                      {
                        "type": "string",
                        "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                          },
                          "preloaded": {
                            "type": "boolean"
                          },
                          "local": {
                            "type": "boolean"
                          },
                          "path": {
                            "type": "string"
                          }
                        },
                        "required": ["id"],
                        "additionalProperties": false
                      }
                    ]
                  },
                  {
                    "type": "array",
                    "items": {
                      "anyOf": [
                        {
                          "type": "string",
                          "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string",
                              "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                            },
                            "preloaded": {
                              "type": "boolean"
                            },
                            "local": {
                              "type": "boolean"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": ["id"],
                          "additionalProperties": false
                        }
                      ]
                    }
                  }
                ]
              }
            }
          },
          "philosophy": {
            "type": "string"
          }
        },
        "required": ["id", "name", "description", "agents"],
        "additionalProperties": false
      }
    }
  },
  "required": ["stacks"],
  "additionalProperties": false
}
