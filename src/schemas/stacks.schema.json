{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/stacks.schema.json",
  "title": "Stacks Configuration",
  "description": "Schema for config/stacks.yaml defining agent groupings.",
  "type": "object",
  "properties": {
    "stacks": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "agents": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "web-framework",
                  "web-styling",
                  "web-client-state",
                  "web-server-state",
                  "web-forms",
                  "web-testing",
                  "web-ui-components",
                  "web-mocking",
                  "web-error-handling",
                  "web-i18n",
                  "web-file-upload",
                  "web-files",
                  "web-utilities",
                  "web-realtime",
                  "web-animation",
                  "web-pwa",
                  "web-accessibility",
                  "web-performance",
                  "web-base-framework",
                  "api-api",
                  "api-database",
                  "api-auth",
                  "api-observability",
                  "api-analytics",
                  "api-email",
                  "api-performance",
                  "mobile-framework",
                  "mobile-platform",
                  "shared-monorepo",
                  "shared-tooling",
                  "shared-security",
                  "shared-methodology",
                  "shared-research",
                  "shared-reviewing",
                  "shared-ci-cd",
                  "cli-framework",
                  "cli-prompts",
                  "cli-testing"
                ]
              },
              "additionalProperties": {
                "anyOf": [
                  {
                    "anyOf": [
                      {
                        "type": "string",
                        "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "preloaded": {
                            "type": "boolean"
                          },
                          "local": {
                            "type": "boolean"
                          },
                          "path": {
                            "type": "string"
                          }
                        },
                        "required": ["id"],
                        "additionalProperties": false
                      }
                    ]
                  },
                  {
                    "type": "array",
                    "items": {
                      "anyOf": [
                        {
                          "type": "string",
                          "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "preloaded": {
                              "type": "boolean"
                            },
                            "local": {
                              "type": "boolean"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": ["id"],
                          "additionalProperties": false
                        }
                      ]
                    }
                  }
                ]
              }
            }
          },
          "philosophy": {
            "type": "string"
          }
        },
        "required": ["id", "name", "description", "agents"],
        "additionalProperties": false
      }
    }
  },
  "required": ["stacks"],
  "additionalProperties": false
}
