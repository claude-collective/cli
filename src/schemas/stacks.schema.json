{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/stacks.schema.json",
  "title": "Stacks Configuration",
  "description": "Schema for config/stacks.yaml defining agent groupings.",
  "type": "object",
  "properties": {
    "stacks": {
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "agents": {
            "type": "object",
            "propertyNames": {
              "type": "string"
            },
            "additionalProperties": {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "framework",
                  "styling",
                  "client-state",
                  "server-state",
                  "forms",
                  "testing",
                  "ui-components",
                  "mocking",
                  "error-handling",
                  "i18n",
                  "file-upload",
                  "files",
                  "utilities",
                  "realtime",
                  "animation",
                  "pwa",
                  "accessibility",
                  "web-performance",
                  "api",
                  "database",
                  "auth",
                  "observability",
                  "analytics",
                  "email",
                  "performance",
                  "mobile-framework",
                  "monorepo",
                  "tooling",
                  "security",
                  "methodology",
                  "research",
                  "reviewing",
                  "ci-cd",
                  "cli-framework",
                  "cli-prompts",
                  "cli-testing",
                  "base-framework",
                  "platform"
                ]
              },
              "additionalProperties": {
                "anyOf": [
                  {
                    "anyOf": [
                      {
                        "type": "string",
                        "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                          },
                          "preloaded": {
                            "type": "boolean"
                          },
                          "local": {
                            "type": "boolean"
                          },
                          "path": {
                            "type": "string"
                          }
                        },
                        "required": ["id"],
                        "additionalProperties": false
                      }
                    ]
                  },
                  {
                    "type": "array",
                    "items": {
                      "anyOf": [
                        {
                          "type": "string",
                          "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string",
                              "pattern": "^(web|api|cli|mobile|infra|meta|security)-.+-.+$"
                            },
                            "preloaded": {
                              "type": "boolean"
                            },
                            "local": {
                              "type": "boolean"
                            },
                            "path": {
                              "type": "string"
                            }
                          },
                          "required": ["id"],
                          "additionalProperties": false
                        }
                      ]
                    }
                  }
                ]
              }
            }
          },
          "philosophy": {
            "type": "string"
          }
        },
        "required": ["id", "name", "description", "agents"],
        "additionalProperties": false
      }
    }
  },
  "required": ["stacks"],
  "additionalProperties": false
}
