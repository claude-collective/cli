{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/agent-frontmatter.schema.json",
  "title": "Agent Frontmatter",
  "description": "Schema for agent .md file frontmatter fields.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*$"
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "tools": {
      "type": "string"
    },
    "disallowedTools": {
      "type": "string"
    },
    "model": {
      "type": "string",
      "enum": [
        "sonnet",
        "opus",
        "haiku",
        "inherit"
      ]
    },
    "permissionMode": {
      "type": "string",
      "enum": [
        "default",
        "acceptEdits",
        "dontAsk",
        "bypassPermissions",
        "plan",
        "delegate"
      ]
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "hooks": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "matcher": {
              "type": "string"
            },
            "hooks": {
              "minItems": 1,
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "command",
                      "script",
                      "prompt"
                    ]
                  },
                  "command": {
                    "type": "string"
                  },
                  "script": {
                    "type": "string"
                  },
                  "prompt": {
                    "type": "string"
                  }
                },
                "required": [
                  "type"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": [
            "hooks"
          ],
          "additionalProperties": false
        }
      }
    }
  },
  "required": [
    "name",
    "description"
  ],
  "additionalProperties": false
}
