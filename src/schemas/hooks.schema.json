{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-collective.local/schemas/hooks.schema.json",
  "title": "Hooks Configuration",
  "description": "Schema for agent hook definitions.",
  "type": "object",
  "propertyNames": {
    "type": "string"
  },
  "additionalProperties": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "matcher": {
          "type": "string"
        },
        "hooks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["command", "script", "prompt"]
              },
              "command": {
                "type": "string"
              },
              "script": {
                "type": "string"
              },
              "prompt": {
                "type": "string"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
