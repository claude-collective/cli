{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/metadata.schema.json",
  "title": "Skill Metadata",
  "description": "Schema for skill metadata.yaml files.",
  "type": "object",
  "properties": {
    "category": {
      "type": "string"
    },
    "categoryExclusive": {
      "type": "boolean"
    },
    "author": {
      "type": "string",
      "pattern": "^@[a-z][a-z0-9-]*$"
    },
    "cliName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "cliDescription": {
      "type": "string",
      "minLength": 1,
      "maxLength": 60
    },
    "usageGuidance": {
      "type": "string",
      "minLength": 10
    },
    "requires": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "compatibleWith": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "conflictsWith": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*$"
      }
    },
    "requiresSetup": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "providesSetupFor": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "contentHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{7}$"
    },
    "updated": {
      "type": "string"
    },
    "forkedFrom": {
      "type": "object",
      "properties": {
        "skillId": {
          "type": "string"
        },
        "version": {
          "type": "integer",
          "minimum": 1,
          "maximum": 9007199254740991
        },
        "contentHash": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      },
      "required": ["skillId", "contentHash", "date"],
      "additionalProperties": false
    },
    "domain": {
      "type": "string"
    },
    "custom": {
      "type": "boolean"
    }
  },
  "required": ["category", "author", "cliName", "cliDescription", "usageGuidance"],
  "additionalProperties": false
}
