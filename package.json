{
  "name": "@claude-collective/cli",
  "version": "0.2.0",
  "description": "CLI for managing Claude Collective skills, stacks, and agents for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "cc": "dist/index.js"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "cli",
    "claude",
    "claude-code",
    "skills",
    "composable skills",
    "agents",
    "stacks",
    "plugins",
    "ai",
    "anthropic",
    "developer-tools",
    "productivity",
    "prompt-engineering",
    "ai-tools"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "oclif": {
    "bin": "cc",
    "dirname": "claude-collective",
    "commands": {
      "strategy": "pattern",
      "target": "./dist/commands"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-not-found",
      "@oclif/plugin-warn-if-update-available"
    ],
    "hooks": {
      "init": [
        "./dist/hooks/init"
      ]
    },
    "topicSeparator": " "
  },
  "scripts": {
    "build:agents": "node src/compile.mjs",
    "build": "tsup",
    "dev": "tsup --watch",
    "cli": "node dist/cli/index.js",
    "cli:dev": "bun src/cli/index.ts",
    "cli-v2": "node dist/cli-v2/index.js",
    "cli-v2:dev": "bun src/cli-v2/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cc:init": "bun src/cli/index.ts init",
    "cc:edit": "bun src/cli/index.ts edit",
    "cc:compile": "bun src/cli/index.ts compile",
    "cc:compile:fullstack": "bun src/cli/index.ts compile -s nextjs-fullstack",
    "cc:compile:angular": "bun src/cli/index.ts compile -s angular-stack",
    "cc:validate": "bun src/cli/index.ts validate",
    "cc:validate:plugins": "bun src/cli/index.ts validate dist/plugins --all",
    "cc:validate:stacks": "bun src/cli/index.ts validate dist/stacks/nextjs-fullstack && bun src/cli/index.ts validate dist/stacks/angular-stack",
    "cc:config": "bun src/cli/index.ts config",
    "cc:list": "bun src/cli/index.ts list",
    "cc:build:plugins": "bun src/cli/index.ts build:plugins",
    "cc:build:stack": "bun src/cli/index.ts build:stack",
    "cc:build:marketplace": "bun src/cli/index.ts build:marketplace",
    "cc:build:all": "bun src/cli/index.ts build:plugins && bun src/cli/index.ts build:marketplace",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "npm run format:check && npm run build && npm run test"
  },
  "lint-staged": {
    "*.{ts,js,json,yaml,yml,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/claude-collective/cli.git"
  },
  "author": "Vincent Bollaert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/claude-collective/cli/issues"
  },
  "homepage": "https://github.com/claude-collective/cli#readme",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@oclif/core": "^4.0.0",
    "@oclif/plugin-autocomplete": "^3.0.0",
    "@oclif/plugin-help": "^6.0.0",
    "@oclif/plugin-not-found": "^3.0.0",
    "@oclif/plugin-warn-if-update-available": "^3.0.0",
    "@oclif/table": "^0.5.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "conf": "^13.0.0",
    "diff": "^8.0.3",
    "execa": "^9.0.0",
    "fast-glob": "^3.3.0",
    "fs-extra": "^11.2.0",
    "giget": "^1.2.0",
    "gray-matter": "^4.0.3",
    "ink": "^5.0.0",
    "liquidjs": "^10.24.0",
    "react": "^18.2.0",
    "yaml": "^2.8.2",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@oclif/test": "^4.0.0",
    "@types/diff": "^8.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
